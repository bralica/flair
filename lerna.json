{
  "packages": [
    "libs/*"
  ],
  "lifecycle": {
    "version": "npm run affected:libs"
  },
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "yes": true
    },
    "version": {
      "push": true,
      "message": "chore(release): publish %s [skip travis]"
    }
  }
}
